{
  "manifest_version": 2,
  "name": "zs2ti Better Gnomio",
  "version": "1.0.0",

  "description": "zs2ti.gnomio.com add-on ułatwiający rozwiązywanie powtórek",

  "icons": {
      "128": "icons/bg128.png"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "zs2ti-bg@Kru1ik",
      "strict_min_version": "57.0"
    }
  },

  "background": {
    "scripts": [
      "background/pre.js",
      "background/search.js"
    ]
  },

  "content_scripts": [
    {
      "matches": [
          "*://zs2ti.gnomio.com/*",
          "file:///*"
      ],
      "js": [
          "lib/jquery-3.6.1.min.js",
          
          "content-scripts/pre.js",
          "content-scripts/main.js",
          "content-scripts/database.js",
          "content-scripts/searchbar.js",
          "content-scripts/blogspotsearch.js"
      ]
    }
  ],
  "permissions": [ 
      "storage",
      "unlimitedStorage",

      "downloads",

      "https://html.duckduckgo.com/html/*",
      "https://*.blogspot.com/*"
    ],
  "browser_action": {
    "default_popup": "popup/index.html"
  }
}
  