{
  "manifest_version": 2,
  "name": "Better Gnomio",
  "version": "0.3",

  "description": "zs2ti gnomio add-on",

  "icons": {
      "128": "icons/bg128.png"
  },

  "content_scripts": [
    {
      "matches": [
          "*://zs2ti.gnomio.com/*",
          "file:///*"
      ],
      "js": [
          "lib/jquery.min.js",
          "content-scripts/pre.js",
          "content-scripts/main.js",
          "content-scripts/database.js",
          "content-scripts/searchbar.js"
      ]
    }
  ],
  "permissions": [ 
      "storage",
      "unlimitedStorage"
    ],
  "browser_action": {
    "default_popup": "popup/index.html"
  }
}
  